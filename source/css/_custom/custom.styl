@keyframes slideUpIn {
  from {
    transform: translateY(20px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideDownIn {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

if (hexo-config('motion.enable')) {
  .menu, .brand {
    opacity: 0;
    animation: slideDownIn 350ms 0ms $mdc-animation-deceleration-curve-timing-function forwards;
  }
  .post-block, .sidebar-inner, .pagination, .comments {
    opacity: 0;
    animation: slideUpIn 350ms 0ms $mdc-animation-deceleration-curve-timing-function forwards;
  }
}
